{
    "manifest_version": 3,
    "name": "YouTube Timestamps",
    "version": "1.1",
    "description": "Displays timestamps for YouTube videos from GitHub",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://api.github.com/*",
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "lib/js-yaml.min.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "timestamps/*"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icon.svg",
        "32": "icon.svg",
        "48": "icon.svg",
        "128": "icon.svg"
    }
}